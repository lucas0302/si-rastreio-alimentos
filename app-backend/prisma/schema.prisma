generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // usa o pooler (porta 6543) em produção
  // directUrl = env("DIRECT_URL")  
}

model Users {
  id       Int     @id @default(autoincrement())
  name     String  @db.VarChar(100)
  username String  @db.VarChar(100)
  password String  @db.VarChar(255)
  active   Boolean @default(true)

  role         role                  @default(user)
  dailyReports DailyShipmentReport[]

  @@map("users")
}

model Customers {
  id                 Int    @id @default(autoincrement())
  name               String @db.VarChar(100)
  email              String @db.VarChar(100)
  cnpj               String @db.VarChar(14)
  address            String @db.VarChar(255)
  phone              String @db.VarChar(100)
  identificationCode String @db.VarChar(255) //Codigo do cliente
  paymentMethod      String @db.VarChar(255)
  paymentTern        String @db.VarChar(255) //Forma de pagamento
  city               String @db.VarChar(255)
  State              String @db.VarChar(255) //Estado
  legalName          String @db.VarChar(255) //Razǜo Social
  stateRegistration  String @db.VarChar(255) //Insc. Estadual

  dailyReports   DailyShipmentReport[]
  monthlyReports MonthlyShipmentReport[]

  @@map("customers")
}

model Product {
  code            Int     @id @default(autoincrement())
  name            String  @db.VarChar(255)
  unit            String  @db.VarChar(10)
  price           Decimal @db.Decimal(10, 2)
  weight          Decimal @db.Decimal(10, 2)
  expiration      Decimal @db.Decimal(5, 2) // validade em dias
  expiration_unit String  @db.VarChar(10) // unidade de medida da validade (dias, meses, anos)

  dailyReports   DailyShipmentReport[]
  monthlyReports MonthlyShipmentReport[]

  @@map("product")
}

model Vehicle {
  id       Int    @id @default(autoincrement())
  model    String @db.VarChar(100)
  plate    String @db.VarChar(10)
  category String @db.VarChar(20)
  brand    String @db.VarChar(30)

  dailyReports DailyShipmentReport[]

  @@map("vehicles")
}

model DailyShipmentReport {
  id                Int      @id @default(autoincrement())
  quantity          Int
  invoiceNumber     Int
  productionDate    DateTime
  destination       String   @db.VarChar(60)
  temperature       Decimal
  sanitaryCondition Boolean
  deliverer         String   @db.VarChar(100)

  userId      Int
  vehicleId   Int
  productId   Int
  customersId Int

  customers Customers @relation(fields: [customersId], references: [id])
  product   Product   @relation(fields: [productId], references: [code])
  users     Users     @relation(fields: [userId], references: [id])
  vehicle   Vehicle   @relation(fields: [vehicleId], references: [id])

  @@map("daily_shipment_report")
}

model MonthlyShipmentReport {
  id             Int      @id @default(autoincrement())
  quantity       Decimal
  destination    String   @db.VarChar(50)
  temperature    Decimal
  deliverer      String   @db.VarChar(100)
  productionDate DateTime
  shipmentDate   DateTime

  productId   Int
  customersId Int

  customers Customers @relation(fields: [customersId], references: [id])
  product   Product   @relation(fields: [productId], references: [code])

  @@map("monthly_shipment_report")
}

enum role {
  admin
  user
}
